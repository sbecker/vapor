<h2>New Security Group</h2>

<% form_for(@security_group) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :aws_group_name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :aws_description %>
  </p>
  <p>
    <%= f.label :permissions %><br />
    <%= f.text_area :aws_perms %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', security_groups_path %>
